<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand"><span><%= link_to "Bookers", root_path %></span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <%= link_to  user_path(current_user.id), method: :get do %>
            <i class="fas fa-home nav-link text-light"></i>Home
          <% end %>
          <%= link_to  users_path, method: :get do %>
            <i class="fas fa-users nav-link text-light"></i>Users
          <% end %>
          <%= link_to  books_path, method: :get do %>
            <i class="fas fa-book-open nav-link text-light"></i>Books
          <% end %>
          <%= link_to  destroy_user_session_path, method: :delete do %>
            <i class="fas fa-sign-out-alt nav-link text-light" rel="nofollow" data-method="delete"></i>logout
          <% end %>
        </ul>
      </div>
    </div>
    </nav>
    <% else %>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand"><span><%= link_to "Bookers", root_path %></span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <%= link_to  root_path, method: :get do %>
            <i class="fas fa-home nav-link text-light"></i>Home
          <% end %>
          <%= link_to  home_about_path, method: :get do %>
            <i class="fas fa-link nav-link text-light"></i>About
          <% end %>
          <%= link_to  new_user_registration_path, method: :get do %>
            <i class="fas fa-user-plus nav-link text-light"></i>sign up
          <% end %>
          <%= link_to  new_user_session_path, method: :get do %>
            <i class="fas fa-sign-in-alt nav-link text-light"></i> login
          <% end %>
        </ul>
      </div>
    </div>
    </nav>
    <% end %>
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
    <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
  </body>
</html>
