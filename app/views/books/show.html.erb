<div class="container px-5 px-sm-0">
  <div class="row">
    
    <!--User info、New book開始-->
        <%= render 'books/list', book: @book %>
    <!--User info、New book終了-->
    
    <!--Book detail開始-->
    <h2>Book detail</h2>
    <table>
    　<thead>
        <tr>
          <th></th>
        　<th>Title</th>
        　<th>Body</th>
        </tr>
    　</thead>
    　<tbody>
        <tr>
          <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
          <td><%= link_to @book.user.name, user_path(@book.user) %></td>
        　<td><%= link_to @book.title, book_path(@book) %></td>
        　<td><%= @book.body %></td>
        　<td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book) %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"} %>
            <% end %>
          </td>
        </tr>
    　</tbody>
    </table>
    <!--Book detail終了-->
  </div>
</div>