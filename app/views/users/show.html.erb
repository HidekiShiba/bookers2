<!--User info、New book開始-->
<%= render 'users/list', user: @user %>
<!--User info、New book終了-->

<!--UserBooks開始-->
<h2>Books</h2>
<table>
　<thead>
    <tr>
      <th></th>
    　<th>Title</th>
    　<th>Body</th>
    </tr>
　</thead>
　<tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "60x60" %></td>
    　<td><%= link_to book.title, book_path(book) %></td>
    　<td><%= book.body %></td>
    </tr>
    <% end %>
　</tbody>
</table>
<!--UserBooks終了-->